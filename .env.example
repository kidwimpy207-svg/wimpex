# Example environment variables for Wimpex
# Copy this file to .env and fill values for production

API_PREFIX=/api
PORT=3000
NODE_ENV=development
APP_URL=http://localhost:3000

# JWT auth
JWT_SECRET=your_jwt_secret_here
JWT_EXPIRY=15m
REFRESH_TOKEN_EXPIRY=7d

# VAPID keys for web-push
VAPID_PUBLIC_KEY=your_vapid_public_key_here
VAPID_PRIVATE_KEY=your_vapid_private_key_here

# AWS S3 (for media uploads)
AWS_ACCESS_KEY_ID=your_aws_access_key_id
AWS_SECRET_ACCESS_KEY=your_aws_secret_access_key
S3_BUCKET=your_s3_bucket_name
AWS_REGION=us-east-1
CLOUDFRONT_DOMAIN=https://d123.cloudfront.net

# Stripe payments
STRIPE_SECRET_KEY=sk_test_xxx
STRIPE_PUBLISHABLE_KEY=pk_test_xxx
STRIPE_WEBHOOK_SECRET=whsec_xxx
STRIPE_PRICE_PRO_MONTHLY=price_xxx
STRIPE_PRICE_CREATOR_MONTHLY=price_xxx

# SMTP for transactional emails
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=you@example.com
SMTP_PASS=supersecret
EMAIL_FROM=noreply@wimpex.app

# CORS & security
CORS_ORIGIN=http://localhost:3000,https://wimpex.app

# Optional services
DATA_ENCRYPTION_KEY=generate_a_strong_hex_key_here
SENTRY_DSN=
POSTHOG_KEY=

# ==================================================
# Spotify API (for music picker / OAuth)
# Register a Spotify app and paste credentials here
# ==================================================
SPOTIFY_CLIENT_ID=your_spotify_client_id_here
SPOTIFY_CLIENT_SECRET=your_spotify_client_secret_here
SPOTIFY_REDIRECT_URI=http://localhost:3000/api/spotify/callback
SPOTIFY_SCOPES=user-read-email,user-read-private,playlist-read-private

# ==================================================
# Gemini / Google Generative Language API
# Put your API key here (keep secret, do NOT commit to public repos)
# ==================================================
GEMINI_API_KEY=

# OpenRouter (Wimpy) - optional. If set, server will proxy messages to OpenRouter
# Keep this secret; do NOT commit production API keys to public repos.
OPENROUTER_API_KEY=
# Optional: model name (defaults to gpt-4o-mini)
OPENROUTER_MODEL=gpt-4o-mini
# Optional: override endpoint
OPENROUTER_ENDPOINT=https://api.openrouter.ai/v1/chat/completions
